{
  "name": "webpack-eliminate-loader",
  "version": "1.0.3",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "url": "https://github.com/JiangWeixian/webpack-eliminate-loader"
  },
  "watch": {
    "run_dev": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "runOnChangeOnly": false
    }
  },
  "dependencies": {
    "loader-utils": "1.2.3",
    "lodash.isempty": "4.4.0",
    "minimatch": "3.0.4",
    "schema-utils": "2.1.0",
    "webpack": "4.39.3"
  },
  "files": [
    "lib",
    "templates"
  ],
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/loader-utils": "1.1.3",
    "@types/lodash.isempty": "4.4.6",
    "@types/schema-utils": "1.0.0",
    "husky": "3.0.1",
    "jest": "24.9.0",
    "np": "5.0.3",
    "npm-watch": "0.6.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tslib": "1.9.3",
    "typescript": "3.4.5"
  },
  "scripts": {
    "build": "rimraf lib && tsc",
    "run_dev": "rimraf lib && tsc",
    "dev": "npm-watch run_dev",
    "test": "jest",
    "pretest": "npm run build",
    "update": "npm update && npm update --save-dev",
    "check": "npm outdated && npm outdated --save-dev",
    "prepublishOnly": "npm run build && np --no-cleanup --yolo --no-publish --any-branch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
